{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MAIC Prompts SSOT Schema",
  "type": "object",
  "required": ["version", "modes"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "description": "ISO8601 타임스탬프 + 빌드 넘버 예: 2025-09-17T12:00:00Z#001"
    },
    "checksum": {
      "type": "string",
      "description": "sha256 해시(선택). 파이프라인에서 계산/검증.",
      "pattern": "^sha256:[a-fA-F0-9]{64}$"
    },
    "modes": {
      "type": "object",
      "required": ["grammar", "sentence", "passage"],
      "additionalProperties": false,
      "properties": {
        "grammar": { "$ref": "#/$defs/modeEntry" },
        "sentence": { "$ref": "#/$defs/modeEntry" },
        "passage": { "$ref": "#/$defs/modeEntry" }
      }
    }
  },
  "$defs": {
    "modeEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "persona",
        "system_instructions",
        "guardrails",
        "examples",
        "citations_policy",
        "routing_hints"
      ],
      "properties": {
        "persona": {
          "type": "string",
          "minLength": 1,
          "description": "말투/캐릭터/금지사항"
        },
        "system_instructions": {
          "type": "string",
          "minLength": 1,
          "description": "출력 순서/형식 지시"
        },
        "guardrails": {
          "type": "object",
          "description": "안전 스위치(PII/정치 민감 등). 임의 키 허용.",
          "additionalProperties": { "type": ["boolean", "string", "number"] }
        },
        "examples": {
          "type": "array",
          "description": "샘플 Q/A (최대 3개 권장)",
          "maxItems": 3,
          "items": {
            "type": "object",
            "required": ["user", "assistant"],
            "additionalProperties": false,
            "properties": {
              "user": { "type": "string" },
              "assistant": { "type": "string" }
            }
          }
        },
        "citations_policy": {
          "type": "string",
          "enum": ["[이유문법]/[문법서적]/[AI지식]"],
          "description": "출처 라벨 셋(프로젝트 SSOT)"
        },
        "routing_hints": {
          "type": "object",
          "additionalProperties": false,
          "required": ["model"],
          "properties": {
            "model": { "type": "string" },
            "max_tokens": { "type": "integer", "minimum": 1, "maximum": 32000 },
            "temperature": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
          }
        }
      }
    }
  }
}
