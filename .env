# ===========================================
# MAIC - My AI Teacher Environment Variables
# ===========================================
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요.

# ===== [AI/LLM APIs] =====
# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (선택사항)
OPENAI_API_KEY=your_openai_api_key_here

# ===== [GitHub Integration] =====
# GitHub Personal Access Token
GITHUB_TOKEN=your_github_token_here

# GitHub Repository (owner/repo 형식)
GITHUB_REPO=LEES1605/MAIC

# ===== [Supabase Database] =====
# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Service Role Key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase Anon Key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===== [Application Settings] =====
# Admin Password
ADMIN_PASSWORD=your_admin_password_here

# Alternative admin password keys
APP_ADMIN_PASSWORD=your_admin_password_here
MAIC_ADMIN_PASSWORD=your_admin_password_here

# ===== [Development Settings] =====
# Debug Mode (true/false)
MAIC_DEBUG=false

# Local Development Mode (true/false)
MAIC_LOCAL_DEV=false

# ===== [Streamlit Configuration] =====
# Streamlit Server Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_BROWSER_SERVER_ADDRESS=localhost

# ===== [Security Settings] =====
# Secret Key for Session Management
SECRET_KEY=your_secret_key_here

# ===== [Performance Settings] =====
# Cache Settings
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# ===== [Logging] =====
# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== [Optional Integrations] =====
# Google Drive API (선택사항)
GOOGLE_DRIVE_CREDENTIALS_FILE=path/to/credentials.json

# Slack Integration (선택사항)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL=your_slack_channel_here

# ===== [Database Settings] =====
# Database URL (PostgreSQL, SQLite 등)
DATABASE_URL=sqlite:///./maic.db

# ===== [File Storage] =====
# Local Storage Path
PERSIST_DIR=~/.maic/persist

# ===== [Monitoring] =====
# Sentry DSN (에러 추적용, 선택사항)
SENTRY_DSN=your_sentry_dsn_here

# ===== [Rate Limiting] =====
# API Rate Limits
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# 설정 가이드:
# 1. 이 파일을 .env로 복사하세요
# 2. 각 변수의 값을 실제 값으로 수정하세요
# 3. .env 파일은 절대 Git에 커밋하지 마세요
# 4. Streamlit Cloud에서는 Secrets로 설정하세요
# ===========================================
